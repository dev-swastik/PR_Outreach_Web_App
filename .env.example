# Google AI (Gemini) API Key
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here
OPENAI_API_KEY=Open_API_Key

# Supabase Configuration
# Get from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Resend Email Service
# Get from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here
EMAIL_ENABLED=False

# Email Configuration
FROM_EMAIL=yourname@dumroo.ai

# Development Mode (optional)
# Set DEV_MODE=true and provide DEV_TEST_EMAIL to send all emails to a test address
# This allows testing email delivery, tracking, and unsubscribe functionality
DEV_MODE=false
DEV_TEST_EMAIL=your-test-email@example.com

# Backend URL (for email tracking)
BACKEND_URL=http://localhost:5000

# Hunter.io API (for email enrichment)
# Get from: https://hunter.io/api_keys
HUNTER_API_KEY=your_hunter_api_key_here

# Scraper Service URL
# URL where the Python scraper service is running
SCRAPER_SERVICE_URL=http://localhost:5001
